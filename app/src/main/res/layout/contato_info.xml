<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@id/site"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icone_face" />

        <TextView
            android:layout_width="174dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="3"
            android:text="/@japonesnleuece"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/site"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@id/sede1"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icone_site" />

        <TextView
            android:layout_width="174dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start"
            android:text="www.uece.br/nucleodelinguas"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sede1"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Sede 1:"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_pin" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:text="Av. Luciano Carneiro, 345, Bairro de Fátima - Fortaleza-CE"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_fone" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Fone: (85) 3101 - 9673"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sede2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sede1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Sede 2:"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_pin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Av. Luciano Carneiro, 345, Bairro de Fátima - Fortaleza-CE"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_fone" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Fone: (85) 3101 - 9673"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
