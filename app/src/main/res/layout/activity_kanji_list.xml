<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hikari.com.projeto1.KanjiListActivity">


    <EditText
        android:id="@+id/searchText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:ems="10"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:weightSum="2">

        <Spinner
            android:id="@+id/kanjiCapSpn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:defaultFocusHighlightEnabled="false"
            android:dropDownWidth="match_parent"
            android:overlapAnchor="false"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />


        <Spinner
            android:id="@+id/kanjiOrdemSpn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:dropDownSelector="@android:drawable/spinner_dropdown_background"
            android:dropDownWidth="match_parent"
            android:overlapAnchor="false"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerKanaId"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="94dp" />


</LinearLayout>
